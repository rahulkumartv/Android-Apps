<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <TextView 
     android:id ="@+id/TimerText"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:paddingTop="10dp"
     android:paddingLeft="20dp"
     android:text="Timer"  />

    <Spinner
        android:id="@+id/QuesCntSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimerSpinner"
        android:layout_alignLeft="@+id/TimerSpinner"
        android:text="Timer"
        android:entries="@array/QuestionCount" />

    <Spinner
        android:id="@+id/TimerSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/QuesCntText"
        android:text="Timer"
        android:entries="@array/TimerValues" />

    <TextView
        android:id="@+id/QuesCntText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/TimerSpinner"
        android:text="Question Count" />

    <Button
        android:id="@+id/OkButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuesCntSpinner"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/TimerText"
        android:text="OK" />

</RelativeLayout>